<%= form_for(@recognition) do |f| %>
  <% if @recognition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recognition.errors.count, "error") %> prohibited this recognition from being saved:</h2>

      <ul>
      <% @recognition.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <h4>Award A Badge</h4>
    Select some badges and then select some people to receive them. Thatâ€™s it!
    <label>Choose a Nifty Badge</label>
    <table>
      <thead>
        <th></th>
        <th>Badge</th>
        <th>Badge Name</th>
        <th>Description</th>
        <th>Label</th>
      </thead>
      <tbody>
        <% Badge.all.each do |badge| %>
          <tr>
            <td><%= check_box_tag "recognition[badges][#{badge.id}]" %></td>
            <td><%= badge.artwork.try(:image) %></td>
            <td><%= badge.name %></td>
            <td><%= badge.description %></td>
            <td><%= badge.material_name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <label>Who Deserves This Award
      <%= f.collection_select(:recipient, User.all, :id, :name, {}, { multiple: true, class: 'chosen-select' }) %>
    </label>

    <label>Write Something Nice
      <%= f.text_area :reason %>
    </label>

    <div class="panel">
      <label>When badges are awarded, the badges will appear on the public dashboard.</label>
      <%= f.submit class: "button" %>
    </div>

  </div>

<% end %>
